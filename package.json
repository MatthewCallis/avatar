    }
  ],
  "scripts": {
    "lint": "eslint src",
    "make": "node rollup.config.js",
    "report": "nyc report --reporter=html",
    "test-watch": "npm test -- --watch",
    "test": "NODE_ENV=test nyc ava",
    "validate": "npm ls"
  },
  "github": "https://github.com/MatthewCallis/avatar",
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": 5,
    "failFast": false,
    "tap": false,
    "powerAssert": true,
    "require": [
      "babel-register",
      "./test/setup-browser-env.js"
    ],
    "verbose": true
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "cache": true,
    "all": true,
    "check-coverage": true,
    "include": [
      "build/**/*.js"
    ]
  },
  "pre-commit": [
    "lint",
    "validate",
    "test"
  ]
